prefix = @prefix@
srcdir = @srcdir@
INSTALL = install

all: cloudprint.ppd

cloudprint.ppd:
	ppdc cloudprint.drv  -d .
	
clean:
	rm cloudprint.ppd

install:
	${INSTALL} -D -g root -o root -m 700  ${srcdir}/backend.py /usr/libexec/cups/backend/cloudprint
	${INSTALL} -D ${srcdir}/submitjob.py ${prefix}/lib/cloudprint-cups/submitjob.py
	${INSTALL} ${srcdir}/config.py ${prefix}/lib/cloudprint-cups/config.py
	${INSTALL} -D ${srcdir}/cloudprint.ppd ${prefix}/share/cups/model/CloudPrint.ppd
